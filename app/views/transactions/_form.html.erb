<div class="card" style="width: 50rem;">
  <div class="card-body container">
    <%= form_for @transaction_form, url: transactions_path, method: :post, data: { turbo: false } do |form| %>

    <div class="row form-group">
      <%= form.label :email, "Email" %>
      <div class="col">
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :email } %>
    </div>

    <div class="row form-group">
      <%= form.label :amount_base, 'You send' %>
      <div class="col-9 pe-3">
        <%= form.text_field :amount_base, value: present_amount_base(@transaction_form), class: "form-control" %>
      </div>
      <div class="col-3">
        <%= form.text_field :base, readonly: true, class: "form-control" %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :amount_base } %>
    </div>

    <div class="row form-group">
      <%= form.label :amount_target, "You get" %>
      <div class="col-9 pe-3">
        <%= form.text_field :amount_target, value: present_amount_target(@transaction_form), class: "form-control" %>
      </div>
      <div class="col-3">
        <%= form.text_field :target, readonly: true, class: "form-control" %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :amount_target } %>
    </div>

    <div class="row form-group">
      <%= form.label :address, "Recipient address" %>
      <div class="col">
        <%= form.text_field :address, class: "form-control" %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :address } %>
    </div>

    <div class="row form-group">
      <div class="col-6">
        <%= form.label :exchange_fee, "Exchange Fee 3%" %>
        <%= form.text_field :exchange_fee, class: "form-control", value: present_exchange_fee(@transaction_form), readonly: true %>
      </div>
      <div class="col-6">
        <label for="network_fee">Network Fee</label>
        <input type="text" id="network_fee" class="form-control" readonly=true value=<%= present_network_fee %>>
      </div>
    </div>

    <div class="row form-group">
      <div class="col">
        <%= form.label :exchange_rate, "Exchange Rate" %>
        <%= form.text_field :exchange_rate, value: present_exchange_rate(@transaction_form), class: "form-control", readonly: true %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :exchange_rate } %>
    </div>

    <div class="row form-group">
      <div class="col">
        <%= form.label :terms, "I agree with Terms of Use", class: "form-check-label" %>
        <%= form.check_box :terms, class: "form-check-input" %>
      </div>
      <%= render partial: 'error', locals: { objet_with_errors: @transaction_form, error_of: :terms } %>
    </div>

    <div class="row form-group">
      <div class="col">
        <%= form.submit "Send", class: "btn btn-primary mt-2" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
